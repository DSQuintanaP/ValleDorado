@model IEnumerable<ValleDorado.Models.MetodoPago>

@{
    ViewData["Title"] = "Index";
}

<h1>Indice Metodo de pago</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Agregar Metodo de Pago</a>
</p>
<table class="table table-striped" id="TablaIndice">
    <thead >
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.IdMetodoPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdMetodoPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdMetodoPago">Editar</a> |
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.IdMetodoPago">Detalles</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdMetodoPago">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
